{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "module": "es6",
    "target": "es6",
    "sourceMap": true,
    "strict": true,
    "jsx": "react",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "webpack", "react", "react-dom"],
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  }
}
